<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <View
        android:id="@+id/line"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:background="@android:color/holo_green_dark" />


    <View
        android:id="@+id/middle_view"
        android:layout_width="12dp"
        android:layout_height="6dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/line"
        android:background="@android:color/holo_green_dark" />

    <View
        android:id="@+id/view_position"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@+id/middle_view"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/circle_layer_list"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_line_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/middle_view"
        android:layout_toRightOf="@+id/middle_view"
        android:text="Piata Romana"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

</RelativeLayout>